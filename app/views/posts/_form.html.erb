<%= render 'shared/validation_errors', obj: @post %>

<div class='well'>
  <%= form_for @post do |f| %>
    <div class='control-group'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    </br>
    <div class ='control-group'>
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    </br>
      <div class ='control-group'>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>
    </br>
    <%= f.submit(@post.new_record? ? 'Create Post' : 'Update Post', class: 'btn btn-primary') %>
  <% end %>
</div>
