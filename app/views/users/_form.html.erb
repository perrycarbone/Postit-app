<div class='well'>
  <%= render 'shared/validation_errors', obj: @user %>
  <%= form_for @user do |f| %>
    <div class='control-group'>
      <%= f.label :username, "User Name" %>
      <%= f.text_field :username %>
    </div>
    <div class='control-group'>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class='control-group'>
      <%= f.label :phone, "Phone Number <small>(numbers only)</small>".html_safe %>
      <%= f.text_field :phone, maxlength: 9 %>
      <%= link_to '#', id: 'two_factor_phone' do %>
        <i class='icon-question-sign'></i>
      <% end %>
    </div>
    <div class='control-group'>
      <%= f.label :time_zone, "Time Zone" %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
    </div>
    <%= f.submit(@user.new_record? ? 'Create User' : 'Update User', class: 'btn btn-primary') %>
  <% end %>
</div>
